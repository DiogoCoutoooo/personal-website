<style>
    .book-detail-page {
        background: var(--bg);
        color: var(--text);
        padding-top: 40px;
    }

    .book-hero {
        padding: 60px 0 100px; /* Extra padding at bottom for the indicator */
        background: linear-gradient(180deg, rgba(20,20,20,1) 0%, var(--bg) 100%);
        position: relative;
        min-height: 85vh;
        display: flex;
        align-items: center;
    }

    .book-container {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 60px;
        align-items: start;
    }

    .book-visual {
        position: sticky;
        top: 120px;
    }

    .main-image {
        background: #1a1a1a;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 30px 60px rgba(0,0,0,0.5);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .book-cover-img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 4px;
    }

    .book-info {
        padding-top: 20px;
    }

    .book-badge {
        display: inline-block;
        background: var(--gold);
        color: #000;
        font-size: 12px;
        font-weight: 700;
        padding: 4px 12px;
        border-radius: 4px;
        margin-bottom: 16px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .book-info h1 {
        font-size: clamp(32px, 5vw, 48px);
        line-height: 1.1;
        margin-bottom: 16px;
        color: #fff;
    }

    .author-credits {
        font-size: 1.25rem;
        color: var(--muted);
        margin-bottom: 8px;
    }

    .author-name {
        color: #fff;
        font-weight: 600;
    }

    .prefacio-credits {
        font-size: 1.1rem;
        color: var(--muted);
        margin-bottom: 24px;
    }

    .book-metadata {
        border-top: 1px solid rgba(255,255,255,0.1);
        padding-top: 24px;
        margin-bottom: 40px;
    }

    .book-metadata p {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
    }

    .book-actions {
        display: flex;
        gap: 20px;
    }

    .btn-primary {
        background: #b91c1c; /* A deep red similar to the prompt's 'Compra' but adapted for 'Ler' */
        color: #fff;
        padding: 16px 40px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 12px;
        box-shadow: 0 10px 20px rgba(185, 28, 28, 0.2);
    }

    .btn-primary:hover {
        background: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(185, 28, 28, 0.3);
    }

    .book-synopsis {
        padding: 80px 0;
        border-top: 1px solid rgba(255,255,255,0.05);
    }

    .synopsis-grid {
        display: grid;
        grid-template-columns: 240px 1fr;
        gap: 40px;
    }

    .synopsis-header h2 {
        font-size: 2rem;
        color: #fff;
        position: relative;
        padding-bottom: 15px;
    }

    .synopsis-header h2::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 40px;
        height: 3px;
        background: var(--gold);
    }

    .synopsis-content {
        max-width: 800px;
    }

    .synopsis-content p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--muted);
        margin-bottom: 24px;
        text-align: justify;
    }

    .scroll-indicator {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
        margin-top: 60px;
        opacity: 0.6;
        transition: opacity 0.3s ease;
        cursor: pointer;
    }

    .scroll-indicator:hover {
        opacity: 1;
    }

    .scroll-text {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--muted);
    }

    .mouse {
        width: 24px;
        height: 40px;
        border: 2px solid var(--muted);
        border-radius: 20px;
        position: relative;
    }

    .wheel {
        width: 4px;
        height: 8px;
        background: var(--gold);
        border-radius: 2px;
        position: absolute;
        top: 6px;
        left: 50%;
        transform: translateX(-50%);
        animation: scroll-wheel 2s infinite;
    }

    @keyframes scroll-wheel {
        0% { opacity: 0; transform: translateX(-50%) translateY(0); }
        30% { opacity: 1; }
        100% { opacity: 0; transform: translateX(-50%) translateY(15px); }
    }

    @media (max-width: 980px) {
        .scroll-indicator {
            display: none; /* Hide on mobile to keep things compact */
        }
        .book-container {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .book-visual {
            position: static;
            max-width: 400px;
            margin: 0 auto;
        }

        .synopsis-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }
    }
</style>
